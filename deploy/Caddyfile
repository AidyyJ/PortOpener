{
  admin off
  email {env.ACME_EMAIL}
  on_demand_tls {
    ask http://server:8080/api/tls/ask
  }
}

admin.tunnel.{env.BASE_DOMAIN} {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy server:8080
}

*.tunnel.{env.BASE_DOMAIN} {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
  }
  reverse_proxy server:8080
}

https:// {
  tls {
    dns cloudflare {env.CLOUDFLARE_API_TOKEN}
    on_demand
  }
  reverse_proxy server:8080
}

